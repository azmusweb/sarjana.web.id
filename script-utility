// script-utility.js

// Fungsi membuat slug dari judul
function generateSlug(text) {
  return text
    .toLowerCase()
    .replace(/\s+/g, '-')
    .replace(/[^؀-ۿ\w-]+/g, '')
    .replace(/--+/g, '-')
    .replace(/^-+|-+$/g, '');
}

// Fungsi format tanggal
function formatTanggal(isoString) {
  const date = new Date(isoString);
  return date.toLocaleDateString("id-ID", {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit'
  });
}
